@model Product

<div class="card" style="width: 18rem;">
	@foreach (var img in Model.ProductImages)
	{
		<img src="~/assets/images/website-images/@img.Url" class="card-img-top" alt="...">
	}
	<div class="card-body">
		<h5 class="card-title">Title:@Model.Name</h5>
		<h3 class="card-title">SubTitle:@Model.Price</h3>
		<p class="card-text">Description:@Model.Description</p>
	</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item">Order:@Model.SKU</li>
		@foreach (var item in Model.ProductSize)
		{
			<li class="list-group-item">Order:@item.Size.Name</li>
		}

		@foreach (var item in Model.ProductTags)
		{
			<li class="list-group-item">Order:@item.Tag.Name</li>
		}
		@foreach (var item in Model.ProductColor)
		{
			<li class="list-group-item">Order:@item.Color.Name</li>
		}

	</ul>
	<div class="card-body">
		<a asp-controller="Product" asp-action="index" class="btn btn-success">Cancel</a>

	</div>
</div>

